<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Movie</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><img src="<%= Movie.find(bookmark.movie_id).image_url %>" width="50"></td>
        <td><%= Movie.find(bookmark.movie_id).title %></td>
        <td><%= Movie.find(bookmark.movie_id).year %></td>
        <td>
          <a href="/directors/<%= Movie.find(bookmark.movie_id).director_id %>">
            <%= Movie.find(bookmark.movie_id).director.name %>
          </a>
        </td>
        <td>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
          <% if bookmark.user_id == current_user.id %>
          <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
